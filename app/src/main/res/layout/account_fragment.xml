<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/video_grey_background"
    tools:context=".fragments.account.AccountFragment">

    <!--TODO: background color not showing up -->

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:text="@string/my_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/updateDetailsTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/colorWhite"
        android:padding="16dp"
        android:clickable="true"
        android:text="@string/udpate_my_details"
        app:layout_constraintBottom_toTopOf="@+id/changePasswordTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="@+id/updateDetailsTv"
        app:layout_constraintEnd_toEndOf="@+id/updateDetailsTv"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="@+id/updateDetailsTv"
        app:layout_constraintTop_toTopOf="@+id/updateDetailsTv" />

    <TextView
        android:id="@+id/changePasswordTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/colorWhite"
        android:padding="16dp"
        android:clickable="true"
        android:text="@string/change_my_password"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateDetailsTv" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="@+id/changePasswordTv"
        app:layout_constraintEnd_toEndOf="@+id/changePasswordTv"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="@+id/changePasswordTv"
        app:layout_constraintTop_toTopOf="@+id/changePasswordTv" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="16dp"
        android:text="@string/attend_a_course"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePasswordTv" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:padding="16dp"
        android:text="@string/description"
        app:layout_constraintBottom_toTopOf="@+id/findOutMoreTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/findOutMoreTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:padding="16dp"
        android:text="@string/find_out_more"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/upcomingCoursesTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="@+id/findOutMoreTv"
        app:layout_constraintEnd_toEndOf="@+id/findOutMoreTv"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="@+id/findOutMoreTv"
        app:layout_constraintTop_toTopOf="@+id/findOutMoreTv" />


    <TextView
        android:id="@+id/upcomingCoursesTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="16dp"
        android:clickable="true"
        android:text="@string/upcoming_course_dates"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/findOutMoreTv" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="@+id/upcomingCoursesTv"
        app:layout_constraintEnd_toEndOf="@+id/upcomingCoursesTv"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="@+id/upcomingCoursesTv"
        app:layout_constraintTop_toTopOf="@+id/upcomingCoursesTv" />

</android.support.constraint.ConstraintLayout>